<script>
    
    let table=document.querySelector('#tbl');

    function addStudent(){
    
    let nameInput=document.getElementById('name');
    let rollnoInput=document.getElementById('rollno');
    let genderInput=document.querySelector('input[name = "gender"]');
    let courseInput=document.getElementById('course');
    let emailInput=document.getElementById('email');

    let name=nameInput.value;
    let rollno=rollnoInput.value;
    let gender=genderInput.value;
    let course=courseInput.value;
    let email=emailInput.value;

    let template=`<tr>
                    <td>${name}</td>
                    <td>${rollno}</td>
                    <td>${gender}</td>
                    <td>${course}</td>
                    <td>${email}</td>
                  </tr>`;

    table.innerHTML += template;
    }
</script>
